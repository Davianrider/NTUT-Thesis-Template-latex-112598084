@PhdThesis{110TIT00392037,
author={{吳俊諺}},
editor={{吳和庭}
and WU, HO-TING},
title={基於FruityMesh之BLE TDMA傳輸機制的設計與實現},
series={資訊工程系},
year={2022},
publisher={國立臺北科技大學},
address={台北市},
volume={碩士},
pages={48},
keywords={藍芽低功耗; 分時多工; 傳輸機制; 無線網路; FruityMesh; Bluetooth Low Energy; TDMA; Transmission Mechanism; Wireless Network},
abstract={近年來物聯網的蓬勃發展，無線感測網路成為網路技術中的重要角色之一。在無線感測網路技術中，藍芽低功耗(Bluetooth Low Energy, BLE)傳輸協定相較於其他無線網路技術，具有低成本與低功耗的特性。然而BLE傳輸協定，會因為傳輸機制與相關參數的設定，影響吞吐量、耗電及分時多工的表現。BLE網狀網路(Mesh)標準的出現，讓可連接的裝置數量增加，進而提升了網路整體的可擴展性與通訊範圍。然而，在需定期傳送感測資料的應用下，洪泛式的資料傳播會帶來可觀的電量消耗且無法達成分時多工，故本篇論文將使用連線式資料傳輸的BLE Mesh，FruityMesh進行效能的探討。但FruityMesh作為目前唯一開源的連線式BLE Mesh規範，其效能仍有一定程度的改善空間，而且絕大多數的有關連線式資料傳輸的BLE Mesh的研究都是做模擬實驗，因此本論文在實體裝置上進行實作並了解實際上的運作流程。 本論文實作並參考一些文獻修改了 FruityMesh 網路建立的流程，降低了整體網路的點對點的延遲(delay)與提升了封包傳輸接收率（Packet Delivery Ratio, PDR）。本論文也探討傳輸機制與相關參數對於BLE分時多工之關係，於提出之機制上設計週期性傳輸機制，並經由BLE參數調整，在一對多的Mesh傳輸情境下，可平均分配傳輸時間，實現TDMA的傳輸機制。},
url={https://hdl.handle.net/11296/a3g254}
}

@PhdThesis{109TIT00392031,
author={{郭家瑋}},
editor={{吳和庭}
and WU, HO-TING},
title={基於 Nordic SoftDevice 之 BLE TDMA 傳輸機制的設計與實現},
series={資訊工程系},
year={2021},
publisher={國立臺北科技大學},
address={台北市},
volume={碩士},
pages={55},
keywords={藍牙低功耗; 分時多工; 傳輸機制; 無線網路; Bluetooth Low Energy; TDMA; transmission mechanism; wireless network},
abstract={近年來物聯網的蓬勃發展，無線感測網路成為網路技術中的要角之一。在無線感測網路技術中，BLE(Bluetooth Low Energy, 藍牙低功耗)傳輸協定相較於其他無線網路技術，具有低成本與低功耗的特性。然而BLE傳輸協定，會因為傳輸機制與相關參數的設定，影響吞吐量與耗電的表現。Nordic SoftDevice，為具有Bluetooth認證的軟體協定堆疊，用於建置高速與長距離之藍牙低功耗應用。 本論文針對傳輸機制與相關參數對於BLE吞吐量之關係，先提出一方法，用於設定BLE 之Connection Interval最佳值，使BLE設備進行資料傳輸時，達到較佳吞吐量。並基於該方法，於Nordic SoftDevice上設計一週期性傳輸機制，並經由BLE參數調整，在一對多的傳輸情境下，可平均分配Slave傳輸時間，實現TDMA的傳輸機制，或分配不同的Slave傳輸時間，滿足公平性與差別式之傳輸需求。該傳輸機制可偵測連線狀態異動，動態調整BLE參數，持續性提供優良服務品質之傳輸服務。 透過實驗成果顯示，本論文提出之方法與週期性傳輸機制，能使BLE設備在不同傳輸情境下，能控制各個Slave之傳輸時間，並達到優異的傳輸吞吐量。},
url={https://hdl.handle.net/11296/5c352v}
}

